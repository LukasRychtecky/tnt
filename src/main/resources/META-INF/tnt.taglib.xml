<?xml version="1.0"?>
<facelet-taglib
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibary_2_0.xsd
            http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
        version="2.0">
    <namespace>http://codingcrayons.com/tnt</namespace>

	<tag>
		<tag-name>horizontalMenu</tag-name>
		<component>
			<component-type>tnt.HorizontalMenu</component-type>
		</component>
		<attribute>
			<description>If it is true renders HTML select for a display smaller than 30em, otherwise renders an unordered list.</description>
			<name>mini</name>
			<required>false</required>
			<type>boolean</type>
		</attribute>
	</tag>

	<tag>
		<tag-name>menuItem</tag-name>
		<component>
			<component-type>tnt.MenuItem</component-type>
		</component>
	</tag>

	<tag>
		<description>Main wrapper for whole page that is rendered as Div. Should contains Article and Column tags.</description>
		<tag-name>content</tag-name>
		<component>
			<component-type>tnt.Content</component-type>
		</component>
	</tag>

	<tag>
		<description>A wrapper for an article that is rendered as Article tag.</description>
		<tag-name>article</tag-name>
		<component>
			<component-type>tnt.Article</component-type>
		</component>
	</tag>

	<tag>
		<description>A wrapper for a responsive header that is rendered as Header tag.</description>
		<tag-name>header</tag-name>
		<component>
			<component-type>tnt.Header</component-type>
		</component>
	</tag>

	<tag>
		<description>A wrapper for a sidebar that is rendered as Aside tag.</description>
		<tag-name>sidebar</tag-name>
		<component>
			<component-type>tnt.Sidebar</component-type>
		</component>
	</tag>

</facelet-taglib>
